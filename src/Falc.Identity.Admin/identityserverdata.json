{
    "IdentityServerData": {
        "IdentityResources": [
            {
                "Name": "roles",
                "Enabled": true,
                "DisplayName": "Roles",
                "UserClaims": [
                    "role"
                ]
            },
            {
                "Name": "openid",
                "Enabled": true,
                "Required": true,
                "DisplayName": "Your user identifier",
                "UserClaims": [
                    "sub"
                ]
            },
            {
                "Name": "profile",
                "Enabled": true,
                "DisplayName": "User profile",
                "Description": "Your user profile information (first name, last name, etc.)",
                "Emphasize": true,
                "UserClaims": [
                    "name",
                    "family_name",
                    "given_name",
                    "middle_name",
                    "nickname",
                    "preferred_username",
                    "profile",
                    "picture",
                    "website",
                    "gender",
                    "birthdate",
                    "zoneinfo",
                    "locale",
                    "updated_at"
                ]
            },
            {
                "Name": "email",
                "Enabled": true,
                "DisplayName": "Your email address",
                "Emphasize": true,
                "UserClaims": [
                    "email",
                    "email_verified"
                ]
            },
            {
                "Name": "address",
                "Enabled": true,
                "DisplayName": "Your address",
                "Emphasize": true,
                "UserClaims": [
                    "address"
                ]
            }
        ],
        "ApiScopes": [
            {
                "Name": "falc-identity-api:admin",
                "DisplayName": "FALC Identity API - Admin",
                "Required": true,
                "UserClaims": [
                    "role",
                    "name"
                ]
            }
        ],
        "ApiResources": [
            {
                "Name": "falc-identity-api:admin",
                "Scopes": [
                    "falc-identity-api:admin"
                ]
            }
        ],
        "Clients": [
            {
                "ClientId": "FalcPlatform",
                "ClientName": "FALC Platform",
                "ClientUri": "https://localhost:4200",
                "AllowedGrantTypes": [
                    "authorization_code"
                ],
                "RequireClientSecret": false,
                "RequirePkce": true,
                "RedirectUris": [
                    "https://localhost:4200/callback"
                ],
                "PostLogoutRedirectUris": [
                    "https://localhost:4200"
                ],
                "AllowedCorsOrigins": [
                    "https://localhost:4200"
                ],
                "AllowedScopes": [
                    "openid",
                    "email",
                    "profile",
                    "roles",
                    "offline_access",
                    "falc-identity:me"
                ]
            }
        ]
    }
}